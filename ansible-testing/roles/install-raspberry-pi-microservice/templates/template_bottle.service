[Unit]
Description={{ microservice_name }} on port {{ microservice_port }}

[Service]
Type=simple
User= {{ garage_door_user }}
Group= {{ garage_door_user }}

Environment="TZ=America/New_York"
WorkingDirectory=/home/{{garage_door_user }}/raspberry-pi-microservices/{{ microservice_name }}
ExecStart=/home/{{ garage_door_user }}/virtual-env/bin/python {{ microservice_name }}_server.py

Restart=on-success
RestartSec=30

[Install]
WantedBy=multi-user.target
