[Unit]
Description= Garage Door Service

[Service]
Type=simple
User= {{ garage_door_user }}
Group= {{ garage_door_user }}

Environment="TZ=America/New_York"
WorkingDirectory=/home/{{garage_door_user }}/raspberry-pi-microservices/garage_door
ExecStart=/home/{{ garage_door_user }}/virtual-env/bin/python garage_bottle_server.py

Restart=on-success
RestartSec=30

[Install]
WantedBy=multi-user.target
